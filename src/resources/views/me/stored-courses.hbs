<div class="mt-4">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0 d-flex align-items-center">
      <i class="bi bi-journal-bookmark me-2"></i> Danh sách khóa học
    </h3>

    <a href="/courses/create" class="btn btn-primary px-3">
      <i class="bi bi-plus-lg me-1"></i> Thêm khóa học
    </a>
  </div>

  {{#if courses.length}}

  <!-- Card container -->
  <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

    <div class="table-responsive">
      <table class="table table-hover table-striped align-middle mb-0">

        <!-- Table head -->
        <thead class="bg-light">
          <tr>
            <th style="width: 60px;">#</th>
            <th>Tên khóa học</th>
            <th style="width: 140px;">Trình độ</th>
            <th style="width: 180px;">Ngày tạo</th>
            <th class="text-end" style="width: 170px;">Hành động</th>
          </tr>
        </thead>

        <!-- Table body -->
        <tbody>
          {{#each courses}}
          <tr>
            <td class="fw-semibold">{{sum @index 1}}</td>

            <td>
              <div class="fw-semibold">{{this.name}}</div>
              <div class="text-muted small">Slug: {{this.slug}}</div>
            </td>

            <td>
              <span class="badge rounded-pill bg-info text-dark px-3 py-2 shadow-sm">
                {{this.level}}
              </span>
            </td>

            <td>
              <span class="badge bg-light text-muted border px-3 py-2">
                {{this.createdAt}}
              </span>
            </td>

            <td class="text-end">

              <a href="/courses/{{this._id}}/edit"
                class="btn btn-outline-secondary btn-sm px-3 me-1 rounded-pill">
                <i class="bi bi-pencil-square me-1"></i> Sửa
              </a>

              <!-- Nút Xóa (dùng DELETE với method-override) -->
            <form method="POST"
                  action="/courses/{{this._id}}?_method=DELETE"
                  class="d-inline"
                  onsubmit="return confirm('Bạn có chắc muốn xóa khóa học này không?');">
              <button type="submit"
                      class="btn btn-outline-danger btn-sm px-3 rounded-pill">
                <i class="bi bi-trash3 me-1"></i> Xóa
              </button>
            </form>

            </td>
          </tr>
          {{/each}}
        </tbody>

      </table>
    </div>

  </div>

  {{else}}

  <!-- Empty state đẹp -->
  <div class="text-center py-5">
    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076500.png"
         width="120"
         class="mb-3 opacity-75">

    <h5 class="fw-semibold text-muted">Chưa có khóa học nào được tạo</h5>

    <a href="/courses/create" class="btn btn-primary mt-3 px-4 py-2 rounded-pill">
      <i class="bi bi-plus-lg me-2"></i> Tạo khóa học đầu tiên
    </a>
  </div>

  {{/if}}

</div>








